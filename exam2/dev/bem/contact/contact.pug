mixin contact
  .layout_section.layout_section__contact._scrollTo-contact
    .contact(id='contact')
      h2.h2.h2__big get in touch
      .contact_main
        .contact_adress
          p.contact_text
            span.contact_text.contact_text__accent
              i.fa.fa-map-marker  
            |   91 Nolan Extensions Suite 670
          p.contact_text
            span.contact_text.contact_text__accent
              i.fa.fa-phone  
            |   +001 356-868-2454
          p.contact_text
            span.contact_text.contact_text__accent
              i.fa.fa-envelope-o  
            |   gahuy93@gmail.com
          p.contact_text
            span.contact_text.contact_text__accent
              i.fa.fa-map-marker  
            |   From 07:05AM to 19:30PM
        form.contact_form
          input.contact_input(type='text', placeholder='Name', pattern='^[a-zA-Z]+$', required='')
          input.contact_input(type='email', placeholder='E-Mail', required='')
          input.contact_button(type='submit', value='submit') 
